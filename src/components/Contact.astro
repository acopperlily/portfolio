---
import socialInfo from '../scripts/socialInfo.js';
import SocialLink from './SocialLink.astro';
import ImagePlusText from './ImagePlusText.astro';

const contactText = [
  "Need a developer with a proven track record of creating and implementing successful full-stack web applications? Great news! I am looking to bring my skills to a company with a more extensive reach.",
  "Please feel free to contact me directly at april.copley@protonmail.com or submit the form below."
];
---

<section id="contact" class="contact">
  <div class="contact__container container">
    <ImagePlusText
      src="headshot"
      alt="Me"
      title="Get in Touch"
      text={contactText}
    />

    <div class="contact__form-and-links__container">

      <ul class="social-cards__container" >

        {socialInfo.map(si => (
          <SocialLink 
            platform={si.platform} 
            url={si.url} 
            handle={si.handle} 
            className="social-link--card" 
          />
        ))}

      </ul>

      <form class="contact__form" action="">
        <label class="contact__form__label" for="name">Name</label>
        <input type="text" name="name" id="name">
        <label class="contact__form__label" for="email">Email</label>
        <input type="email" name="email" id="email">
        <label class="contact__form__label" for="message">Message</label>
        <textarea name="message" id="message" cols="30" rows="5"></textarea>
        <button class="contact__form__btn">Send Message</button>
      </form>
    </div>
  </div>
</section>


<style>
  .contact__form-and-links__container {
    margin-top: 5rem;
  }

  .social-cards__container {
    padding-left: 0;
  }
</style>