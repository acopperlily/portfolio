---
import socialInfo from '../scripts/socialInfo.js';
import SocialLink from './SocialLink.astro';
import ImagePlusText from './ImagePlusText.astro';

const contactText = [
  "Need a developer with a proven track record of creating and implementing successful full-stack web applications? Great news! I am looking to bring my skills to a company with a more extensive reach.",
  "Please feel free to contact me directly at april.copley@protonmail.com or submit the form below."
];
---

<section id="contact" class="contact">
  <div class="contact__container container">
    <ImagePlusText
      src="headshot"
      alt="Me"
      title="Get in Touch"
      text={contactText}
    />

    <div class="contact__form-and-links__container">

      <div class="form__wrapper">
        <h3 class="form__title">Contact</h3>
        <form class="form" action="">
          <div class="form__input-wrapper">
            <label class="form__label" for="name">Name</label>
            <input class="form__input" type="text" name="name" id="name" placeholder="Ada Lovelace" required >
          </div>
          <div class="form__input-wrapper">
            <label class="form__label" for="email">Email</label>
            <input class="form__input" type="email" name="email" id="email" placeholder="adalovelace@gmail.com" required >
          </div>
          <div class="form__input-wrapper">
            <label class="form__label" for="message">Message</label>
            <textarea class="form__input" name="message" id="message" placeholder="Please enter your message here..." required cols="30" rows="5"></textarea>
          </div>
          <button type="submit" class="form__btn btn clickable">Send Message</button>
        </form>
      </div>

      <div class="social-cards__wrapper">
        <h3 class="social-cards__title">Connect</h3>
        <ul class="social-cards__container" >
          {socialInfo.map(si => (
            <SocialLink
              platform={si.platform}
              url={si.url}
              handle={si.handle}
              className="social-link--card"
            />
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>


<style>
  .contact__form-and-links__container {
    margin-top: 5rem;
    display: flex;
    flex-direction: column;
    gap: 5em;
  }

  .social-cards__wrapper {
    padding-left: 0;
    flex: 1;
  }

  .form__wrapper {
    width: 100%;
    flex: 1.5;
  }

  .form__title,
  .social-cards__title {
    padding-bottom: 1rem;
    margin-bottom: 5rem;
    border-bottom: 2px solid var(--color-med);
  }

  .form__input-wrapper {
    margin-top: 2rem;
  }

  .form__label {
    display: block;
    margin-bottom: 0.5rem;
    font-family: var(--bold-ss-ff);
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing);
  }

  .form__input {
    padding: 0.7rem;
    width: 100%;
    /* margin-bottom: 1.5rem; */
    background-color: rgba(255, 255, 255, 0.12);
    -webkit-backdrop-filter: blur(10px);
    backdrop-filter: blur(10px);
    color: white;
    border: 2px solid var(--color-med);
    border-radius: 5px;
  }

  .form__input:-moz-placeholder {
    color: var(--color-light);
    opacity: 1;
    font-weight: 300;
    letter-spacing: .1ch;
  }

  .form__input::-moz-placeholder {
    color: var(--color-light);
    opacity: 1;
    font-weight: 300;
    letter-spacing: .1ch;
  }

  .form__input::-webkit-input-placeholder {
    color: var(--color-light);
    font-weight: 300;
    letter-spacing: .1ch;
  }

  .form__input::placeholder {
    color: var(--color-light);
    font-weight: 300;
    letter-spacing: .1ch;
  }

  .form__btn {
    margin-top: 3rem;
    background-color: var(--color-light);
    border-radius: 5px;
    padding: 1.5rem;
    width: 20rem;

    font-family: var(--bold-ss-ff);
    font-size: 1rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing);
  }

  @media (min-width: 55em) {
    .contact__form-and-links__container {
      flex-direction: row;
    }
  }
</style>
