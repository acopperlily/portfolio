---
import MenuItem from "./MenuItem.astro"
const menuItems = [
  'home', 'about', 'projects', 'contact'
];
---

<ul class="header__menu">

  {menuItems.map(item => (
    <MenuItem {item} />
  ))}

</ul>

<style>
  .header__menu {
    padding: 1rem 3rem;
  }

  /* Media Queries */ 
  @media (min-width: 60em) {

    .header__menu {
      padding: 0;
      display: flex;
      gap: 3rem;
    }
  }
  
</style>
