---
import Social from './Social.astro';
const dateRange = '2022â€“2024';
---

<footer>
  <div class="footer__container">

    <div class="footer__my-info">
      <div class="footer__copy-info">
        <span class="footer__daterange">
          <!-- &copy; {getDateRange(2022)} -->
          &copy; {dateRange}
        </span>
        <span>
          <a
            href="/"
            class="footer__link clickable">
              April Copley
          </a>
        </span>
      </div>
      <div class="footer__social-links">
        <Social className="footer__social-link" platform="twitter" url="https://twitter.com/aprilcopley_dev"/>
        <Social className="footer__social-link" platform="github" url="https://github.com/acopperlily" />
        <Social className="footer__social-link" platform="linkedin" url="https://www.linkedin.com/in/april-copley/" />
        <!-- {socialInfo.map((social, i) => (
          <SocialLink key={i} link={social.link} icon={<social.icon />}/>
        ))} -->
      </div>
    </div>

    <div class="footer__attributions">
      <span>
        Design inspired by: 
        <a 
          href="https://html5up.net/solid-state"
          target='_blank' 
          rel='noopener noreferrer'
          class="footer__link clickable">
            HTML5Up
        </a>
      </span>
      <span> | </span>
      <span>
        Space photo: 
        <a 
          href="https://www.pexels.com/@philippedonn/"
          target='_blank' 
          rel='noopener noreferrer'
          class="footer__link clickable">
            Philippe Donn
        </a>
      </span>
    </div>

  </div>
</footer>
