---
import socialInfo from '../scripts/socialInfo';
import SocialLink from './SocialLink.astro';
const dateRange = '2022â€“2024';
---

<footer>
  <div class="footer__container">

    <div class="footer__info-wrapper">
      <p class="footer__copy-info">
        &copy; {dateRange}
        <a 
          href="#home"
          class="footer__link clickable"
        >
          April Copley
        </a>
      </p>

      <ul class="footer__social-links">
        {socialInfo.map(si => (
          <SocialLink 
            className="footer__social-link" 
            platform={si.platform.toLowerCase()} 
            url={si.url} 
          />
        ))}
      </ul>

    </div>

    <div class="footer__attributions-wrapper">
      <p class="footer__attributions">
        Design inspired by: 
        <a 
          href="https://html5up.net/solid-state"
          target='_blank' 
          rel='noopener noreferrer'
          class="footer__link clickable"
        >
          HTML5Up
        </a>
      
        <span class="vertical-divider"> | </span>

        Space photo: 
        <a 
          href="https://www.pexels.com/@philippedonn/"
          target='_blank' 
          rel='noopener noreferrer'
          class="footer__link clickable"
        >
          Philippe Donn
        </a>
      </p>
    </div>

  </div>
</footer>

<style>
  footer {
    padding-block: 1.6rem;
    background-color: rgba(5, 1, 13, 0.835);
    /* /* -webkit-backdrop-filter: blur(20px); */
    /* backdrop-filter: blur(20px); */
    text-align: center;
    text-transform: uppercase;
    font-weight: 200;
    letter-spacing: 0.3ch;
  }

  .footer__info-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1.2rem;
  }

  .footer__link {
    font-weight: 400;
    letter-spacing: 0.1ch;
  }

  .footer__social-links {
    display: flex;
    gap: 0.7rem;
  }

  .vertical-divider {
    margin-inline: 1rem;
  }

  @media (min-width: 780px) {
    footer {
      background-color: rgba(4, 4, 60, 0.1);
      -webkit-backdrop-filter: blur(20px);
      backdrop-filter: blur(20px);
    }
  }
</style>
