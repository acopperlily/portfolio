---
import socialInfo from '../scripts/socialInfo';
import SocialLink from './SocialLink.astro';
const dateRange = '2022â€“2024';
---

<footer>
  <div class="footer__container">

    <div class="footer__my-info">
      <div class="footer__copy-info">
        <span class="footer__daterange">
          <!-- &copy; {getDateRange(2022)} -->
          &copy; {dateRange}
        </span>
        <span>
          <a
            href="/"
            class="footer__link clickable">
              April Copley
          </a>
        </span>
      </div>

      <ul class="footer__social-links">
        {socialInfo.map(si => <SocialLink className="footer__social-link" platform={si.platform.toLowerCase()} url={si.url} />)}
      </ul>

    </div>

    <div class="footer__attributions">
      <span>
        Design inspired by: 
        <a 
          href="https://html5up.net/solid-state"
          target='_blank' 
          rel='noopener noreferrer'
          class="footer__link clickable">
            HTML5Up
        </a>
      </span>
      <span> | </span>
      <span>
        Space photo: 
        <a 
          href="https://www.pexels.com/@philippedonn/"
          target='_blank' 
          rel='noopener noreferrer'
          class="footer__link clickable">
            Philippe Donn
        </a>
      </span>
    </div>

  </div>
</footer>

<style>
  footer {
    background-color: rgba(4, 4, 60, 0.1);
    -webkit-backdrop-filter: blur(20px);
    backdrop-filter: blur(20px);
  }

  .footer__social-links {
    display: flex;
    gap: 0.5rem;
  }
</style>
