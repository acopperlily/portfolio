---
import { Icon } from 'astro-icon/components';
import LinkButton from './LinkButton.astro';
---
<section id="hero" class="hero section--bg-image">
  <div class="hero__container container">

    <div class="hero__logo-container">
      <Icon 
        name="rocket" 
        class="hero__logo" 
        aria-hidden="true"
      />
    </div>

    <p class="hero__greeting">Hello, World</p>

    <h1 
      class="hero__title"
    >
      I'm <strong>April</strong>, and I'm a <em>software engineer</em>
    </h1>

    <div class="hero__page-links">

      <LinkButton
        link="#about"
        page="About Me section"
        icon="chevron-right"
        title="About"
      />

      <LinkButton
        link="#projects"
        page="Projects section"
        icon="chevron-right"
        title="Projects"
      />

      <LinkButton
        link="#contact"
        page="Contact section"
        icon="chevron-right"
        title="Contact"
      />

    </div>

  </div>
</section>

<style>
  .hero {
    padding-top: 10rem;
    padding-bottom: 22rem;
  }

  .hero__logo-container {
    border: var(--border-thin);
    border-radius: var(--border-radius-circle);
    width: 5rem;
    height: 5rem;

    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero__logo {
    width: 2.8rem;
    height: 2.8rem;
  }

  .hero__greeting {
    padding-bottom: 1rem;
    font-size: 4rem;
    font-size: var(--font-size-900);
    /* font-size: 2rem; */
    border-bottom: var(--border-thicc);
    font-family: var(--font-stack-heading);
    font-weight: var(--font-weight-semi-bold);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
    letter-spacing: 0.2em;
  }

  .hero__title {
    font-size: var(--font-size-700);
    font-weight: var(--font-weight-light);
  }

  .hero__title strong {
    font-weight: var(--font-weight-bold);
  }

  .hero__title em {
    font-style: normal;
    font-weight: var(--font-weight-bold);
  }

  .hero__page-links {
    margin-top: 6em;
  }

  @media (min-width: 50em) {
    .hero__page-links {
      display: flex;
      gap: 2rem;
    }

    .hero::after {
      /* content: "";
      position: absolute;
      left: 0;
      right: 0;
      bottom: -13rem;
      height: 12rem;
      background-color: hsl(var(--hue-primary), 12%, 40%);
      transform: skewY(-5deg); */
    }
  }
</style>