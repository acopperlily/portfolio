---
import { Icon } from 'astro-icon/components';
import LinkButton from './LinkButton.astro';
---
<section id="hero" class="hero section--bg-image">
  <div class="hero__container container">

    <!-- <div class="hero__logo-container">
      <Icon 
        name="rocket" 
        class="hero__logo" 
        aria-hidden="true"
      />
    </div> -->

    <p class="hero__greeting">Hello, World</p>

    <h1 
      class="hero__title"
    >
      I'm <strong>April</strong>, and I'm a full-stack <em>software engineer</em>
    </h1>

    <div class="hero__page-links">

      <LinkButton
        link="#about"
        page="About Me section"
        icon="chevron-right"
        title="About"
      />

      <LinkButton
        link="#projects"
        page="Projects section"
        icon="chevron-right"
        title="Projects"
      />

      <LinkButton
        link="#contact"
        page="Contact section"
        icon="chevron-right"
        title="Contact"
      />

    </div>

  </div>
</section>

<style>
  .hero {
    padding-top: 12rem;
    padding-bottom: 22rem;
  }

  .hero__logo-container {
    margin: 0 auto;
    border: var(--border-thin);
    border-radius: var(--border-radius-circle);
    width: clamp(4rem, 3.8rem + 1vw, 5rem);
    height: clamp(4rem, 3.8rem + 1vw, 5rem);

    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero__logo {
    width: clamp(2rem, 1.8rem + 1vw, 3rem);
    height: clamp(2rem, 1.8rem + 1vw, 3rem);
  }

  .hero__greeting {
    /* margin-top: 2rem; */
    padding-bottom: 0.5rem;
    /* margin-bottom: 2rem; */
    font-size: 4rem;
    font-size: var(--font-size-900);
    line-height: 1.2;
    border-bottom: var(--border-chonk);
    font-family: var(--font-stack-heading);
    font-weight: var(--font-weight-semi-bold);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
    letter-spacing: 0.2em;
  }

  .hero__title {
    font-size: var(--font-size-700);
    font-weight: var(--font-weight-light);
    line-height: 1.4;
    /* letter-spacing: normal; */
  }

  .hero__title strong {
    font-weight: var(--font-weight-bold);
    letter-spacing: var(--letter-spacing-medium);
  }

  .hero__title em {
    font-style: normal;
    font-weight: var(--font-weight-bold);
    letter-spacing: var(--letter-spacing-medium);
  }

  .hero__page-links {
    margin-top: 8rem;
  }

  @media (min-width: 50em) {
    .hero__logo-container {
      margin: 0;
    }

    .hero__page-links {
      display: flex;
      gap: 3rem;
    }
  }
</style>